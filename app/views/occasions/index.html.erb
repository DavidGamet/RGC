<p id="notice"><%= notice %></p>

<h1>Occasions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prix</th>
      <th>Description</th>
      <th>Photo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occasions.each do |occasion| %>
      <tr>
        <td><%= occasion.name %></td>
        <td><%= occasion.prix %></td>
        <td><%= occasion.description %></td>
        <td><%= occasion.photo %></td>
        <td><%= occasion.user %></td>
        <td><%= link_to 'Show', occasion %></td>
        <% if policy(occasion).edit? %>
          <td><%= link_to 'Edit', edit_occasion_path(occasion) %></td>
        <% end %>
         <% if policy(occasion).destroy? %>
        <td><%= link_to 'Destroy', occasion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

